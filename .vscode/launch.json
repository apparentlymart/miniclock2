{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "LPC812-MAX",
      "type": "cppdbg",
      "request": "launch",
      "MIMode": "gdb",
      "MIDebuggerPath": "arm-none-eabi-gdb",
      "program": "${workspaceRoot}/target/thumbv6m-none-eabi/debug/lpc812-mbed-xpresso",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceRoot}/firmware/lpc812-mbed-xpresso",
      "environment": [],
      "externalConsole": false,
      "debugServerPath": "openocd",
      "debugServerArgs": "-f ${workspaceRoot}/firmware/lpc812-mbed-xpresso/openocd.cfg -l ${workspaceRoot}/firmware/lpc812-mbed-xpresso/openocd.log",
      "serverLaunchTimeout": 20000,
      "filterStderr": true,
      "filterStdout": false,
      "serverStarted": "Open On-Chip Debugger",
      "setupCommands": [
        {
          "text": "-interpreter-exec console \"set remotetimeout unlimited\"",
          "ignoreFailures": false
        },
        {
          "text": "-target-select remote localhost:3333",
          "description": "connect to OpenOCD",
          "ignoreFailures": false
        },
        {
          "text": "-file-exec-and-symbols ${workspaceRoot}/target/thumbv6m-none-eabi/debug/lpc812-mbed-xpresso",
          "description": "load symbols",
          "ignoreFailures": false
        },
        {
          "text": "-interpreter-exec console \"monitor arm semihosting enable\"",
          "ignoreFailures": false
        },
        {
          "text": "-interpreter-exec console \"monitor reset halt\"",
          "ignoreFailures": false
        },
        {
          "text": "-target-download",
          "description": "upload code to remote flash memory",
          "ignoreFailures": false
        }
      ],
      "logging": {
        "moduleLoad": true,
        "trace": true,
        "engineLogging": true,
        "programOutput": true,
        "exceptions": true
      }
    }
  ]
}
